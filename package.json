{
  "name": "clerk-chrome-extension-quickstart",
  "displayName": "Clerk chrome extension quickstart",
  "version": "0.0.1",
  "description": "A basic implementation of Clerk with a Plasmo-based Chrome Extension.",
  "author": "Clerk",
  "scripts": {
    "dev": "plasmo dev",
    "build": "plasmo build",
    "package": "plasmo package"
  },
  "dependencies": {
    "@clerk/chrome-extension": "^2.5.21",
    "plasmo": "^0.90.5",
    "react": "^19.1.1",
    "react-dom": "^19.1.1",
    "tailwindcss": "^3.4.17"
  },
  "devDependencies": {
    "@ianvs/prettier-plugin-sort-imports": "4.1.1",
    "@types/chrome": "^0.0.258",
    "@types/node": "^20.19.10",
    "@types/react": "^19.1.10",
    "@types/react-dom": "^19.1.7",
    "postcss": "^8.5.6",
    "prettier": "^3.6.2",
    "typescript": "^5.9.2"
  },
  "manifest": {
    "permissions": [
      "cookies",
      "storage"
    ],
    "host_permissions": [
      "http://localhost/*",
      "$CLERK_FRONTEND_API/*"
    ],
    "key": "$CRX_PUBLIC_KEY"
  }
}
